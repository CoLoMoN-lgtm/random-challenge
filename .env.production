# Backend Environment Variables
NODE_ENV=production
PORT=5000

# MongoDB Configuration
# For local MongoDB:
# MONGODB_URI=mongodb://localhost:27017/random-challenge
# For MongoDB Atlas:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/random-challenge?retryWrites=true&w=majority
MONGODB_URI=mongodb://localhost:27017/random-challenge

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_change_this_in_production

# CORS Configuration
# Add your frontend URL here
CORS_ORIGIN=https://your-frontend-domain.vercel.app

# Rate Limiting (optional)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging Level
LOG_LEVEL=info

# API Configuration
API_PREFIX=/api

# Session Configuration (if needed)
SESSION_SECRET=your_session_secret_here_change_this

# Email Configuration (if needed)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USER=your-email@gmail.com
# EMAIL_PASS=your-app-password

# Frontend Environment Variables (used in index.html)
# Update the API_URL in index.html to point to your backend
# API_URL=https://your-backend-api.com/api